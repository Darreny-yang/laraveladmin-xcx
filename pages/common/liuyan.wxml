<template name="liuyan">
<view class="liuyan">
	<view class="liuyan_bt">我要留言</view>
    <form bindsubmit="formSubmit" bindreset="formReset">
      <view class="form-box">
        <view class="row-wrap">
            <view class="label">联系人</view>
            <view class="label-right">
                <input name="xingming" class="input" type="text" placeholder="如：张三" value="云海天"/>
            </view>
        </view>
         <view class="row-wrap">
            <view class="label">手机号</view>
            <view class="label-right">
                <input name="dianhua" class="input" maxlength="11" type="number" placeholder="11位手机号码" value="13466668888"/>
            </view>
        </view>
          <view class="addr-details">
            <view class="label">内容</view>
            <view class="label-right">
                <textarea name="neirong" auto-height placeholder="内容"  value="云海天"/>
            </view>
        </view>
           <input name="wangzhi" value="www.lar-admin.test" style="display:none;" /> 

            <button type="warn" class="save-btn" formType="submit">留言提交</button>
            <button type="default" class="cancel-btn" bindtap="bindCancel">取消</button>
</view>
</form>
</view>
</template>